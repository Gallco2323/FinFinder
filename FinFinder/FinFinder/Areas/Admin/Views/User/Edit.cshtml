@using FinFinder.Web.ViewModels.Admin
@model EditUserViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust path as per your project structure
}

<h1>Edit User</h1>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">Edit User</h1>
        <a asp-action="Index" class="btn btn-secondary">Back to Users</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Roles</label>
                    <select asp-for="Roles" asp-items="@(new MultiSelectList(Model.AllRoles, Model.Roles))" class="form-select" multiple></select>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>