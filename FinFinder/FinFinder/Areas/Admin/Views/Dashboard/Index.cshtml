@using FinFinder.Web.ViewModels.Admin
@model AdminDashboardViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust path as per your project structure
}

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <!-- Dashboard Header -->
    <div class="text-center mb-5">
        <h1 class="display-4">Admin Dashboard</h1>
        <p class="lead">Monitor and manage users, posts, and activities.</p>
    </div>

    <!-- Statistics Cards -->
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Total Users</h5>
                    <p class="display-4 fw-bold text-dark">@Model.TotalUsers</p>
                    <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-outline-primary btn-sm">Manage Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-success">Total Fish Catches</h5>
                    <p class="display-4 fw-bold text-dark">@Model.TotalFishCatches</p>
                    <a asp-area="Admin" asp-controller="AdminFishCatch" asp-action="Index" class="btn btn-outline-success btn-sm">Manage Posts</a>

                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-danger">Total Comments</h5>
                    <p class="display-4 fw-bold text-dark">@Model.TotalComments</p>
                    <a asp-area="Admin" asp-controller="AdminComment" asp-action="Index" class="btn btn-outline-info btn-sm">Manage Comments</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="mt-5">
        <h3 class="text-secondary">Recent Activities</h3>
        <div class="list-group shadow-sm mt-3">
            @if (Model.RecentActivities.Any())
            {
                @foreach (var activity in Model.RecentActivities)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@activity.UserName</strong>
                            <span class="text-muted">@activity.ActionDescription</span>
                        </div>
                        <span class="badge bg-secondary">@activity.Timestamp.ToString("MMMM dd, yyyy HH:mm")</span>
                    </div>
                }
            }
            else
            {
                <div class="list-group-item text-center text-muted">
                    No recent activities to display.
                </div>
            }
        </div>
    </div>
</div>